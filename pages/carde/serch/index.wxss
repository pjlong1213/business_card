/* pages/carde/serch/index.wxss */
@import '/styles/search.wxss';
.search-icon{
  color: #C0C0C0;

}
.search-btn{
  color: #00CA33
}
.body-content{
  width: 100%;
  background-color: white;
}
.body-title{
  padding-top: 100rpx;
  padding-left: 20rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #C0C0C0
}
.carte{
  width: 100%;
  height: 150rpx;
  margin: 20rpx;
}
.content{
  height: 125rpx;
  display: flex;
}
.carte-image{
  width : 200rpx;
  background-color: blue;
}
.image{
    width: 200rpx;
    height: 125rpx;
}
.carte-Info{
  padding-left: 30rpx;
  width : 300rpx;

}
.info{
  margin-top: 8rpx;
  height: 30rpx;
  font-size: 26rpx;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
  overflow: hidden;
}
.info.name{
  font-weight: bold;
}